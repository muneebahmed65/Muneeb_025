<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/form_no_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/stu_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Student1"
                app:layout_constraintStart_toEndOf="@+id/form_no_txt"
                app:layout_constraintTop_toTopOf="@+id/form_no_txt" />

            <TextView
                android:id="@+id/fat_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Father1"
                app:layout_constraintStart_toStartOf="@+id/stu_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/stu_name_txt" />

            <TextView
                android:id="@+id/major_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Major1"
                app:layout_constraintStart_toEndOf="@+id/stu_name_txt"
                app:layout_constraintTop_toTopOf="@+id/stu_name_txt" />

            <TextView
                android:id="@+id/project_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Project1"
                app:layout_constraintStart_toStartOf="@+id/major_txt"
                app:layout_constraintTop_toBottomOf="@+id/major_txt" />

            <TextView
                android:id="@+id/supervisor_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Supervisor1"
                app:layout_constraintStart_toEndOf="@+id/major_txt"
                app:layout_constraintTop_toTopOf="@+id/major_txt" />

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email1"
                app:layout_constraintStart_toStartOf="@+id/supervisor_txt"
                app:layout_constraintTop_toBottomOf="@+id/supervisor_txt" />

            <TextView
                android:id="@+id/github_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Github1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>